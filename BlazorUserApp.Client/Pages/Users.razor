@page "/users-management"
<PageTitle>Users management</PageTitle>

<h1>Users management</h1>

<button class="btn btn-primary mb-3" @onclick="() => newEditUserForm.OpenForNew()">Add New User</button>

<NewEditUserForm @ref="newEditUserForm" OnUserAdded="@LoadUsers" OnUserUpdated="@LoadUsers"/>

@if (users == null)
{
    <p class="text-warning">Loading...</p>
}
else
{
    <table class="table table-striped table-bordered users-table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <button class="btn btn-primary btn-sm mr-1" @onclick="() => newEditUserForm.OpenForEdit(user)">Edit</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteUser(user.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}